<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/ScrollView01" android:layout_width="wrap_content"
	android:layout_height="wrap_content">

	<TableLayout android:id="@+id/TableLayout01"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:stretchColumns="1">

		<TableRow android:id="@+id/TableRow01" android:layout_width="wrap_content"
			android:layout_height="40px" android:padding="10px">
			<ImageView android:id="@+id/ImageView01" android:layout_width="fill_parent"
				android:layout_height="wrap_content"/> 
			<TextView android:id="@+id/TextView01" android:layout_width="fill_parent"
				android:layout_height="wrap_content"></TextView>

			<TextView android:id="@+id/TextView02" android:layout_width="fill_parent"
				android:layout_height="wrap_content"></TextView>

		</TableRow>

	</TableLayout>
</ScrollView> 

